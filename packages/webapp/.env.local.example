# Azure Entra ID (認証)
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_REDIRECT_URI=http://localhost:3011/auth/callback

# アプリケーション設定
APP_ORIGIN=http://localhost:3011

# 開発環境: 認証をスキップする場合は true に設定 (本番環境では必ず false)
SKIP_AUTH=true
DEV_USER_ID=dev-user-001
DEV_USER_EMAIL=dev@example.com

# Azure Cosmos DB (データベース)
AZURE_COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
AZURE_COSMOS_CONNECTION_STRING=AccountEndpoint=https://your-account.documents.azure.com:443/;AccountKey=your-key;
AZURE_COSMOS_DATABASE_ID=remote-swe-agents

# Azure Blob Storage (ストレージ)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=remote-swe-agents

# Azure Key Vault (シークレット管理)
AZURE_KEYVAULT_URL=https://your-keyvault.vault.azure.net

# Azure Functions (非同期処理)
AZURE_FUNCTION_URL=https://your-function-app.azurewebsites.net/api/AsyncJobHandler
AZURE_FUNCTION_KEY=your-function-key

# イベント設定 (オプション)
NEXT_PUBLIC_EVENT_HTTP_ENDPOINT=""
