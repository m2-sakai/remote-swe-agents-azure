# Azure Web App 環境変数設定テンプレート
# このファイルをコピーして実際の値を設定してください

# Node.js 設定
NODE_ENV=production
WEBSITES_PORT=8080

# Azure Cosmos DB
AZURE_COSMOS_ENDPOINT=https://YOUR_COSMOS_ACCOUNT.documents.azure.com:443/
AZURE_COSMOS_DATABASE_ID=remote-swe-agents
# オプション: 開発環境では接続文字列を使用可能
# AZURE_COSMOS_CONNECTION_STRING=

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=YOUR_STORAGE_ACCOUNT
AZURE_STORAGE_CONTAINER_NAME=remote-swe-agents
# オプション: 開発環境では接続文字列を使用可能
# AZURE_STORAGE_CONNECTION_STRING=

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://YOUR_OPENAI_ACCOUNT.openai.azure.com/
AZURE_OPENAI_API_KEY=YOUR_API_KEY

# Azure AD (Entra ID) 認証
AZURE_AD_CLIENT_ID=YOUR_CLIENT_ID
AZURE_AD_TENANT_ID=YOUR_TENANT_ID
AZURE_AD_CLIENT_SECRET=YOUR_CLIENT_SECRET

# NextAuth 設定
NEXTAUTH_SECRET=GENERATE_RANDOM_32_CHAR_STRING
APP_ORIGIN=https://YOUR_WEBAPP_NAME.azurewebsites.net
NEXTAUTH_URL=https://YOUR_WEBAPP_NAME.azurewebsites.net

# Azure VM 管理（Worker用）
AZURE_SUBSCRIPTION_ID=YOUR_SUBSCRIPTION_ID
AZURE_RESOURCE_GROUP_NAME=remote-swe-agent-rg
AZURE_VM_IMAGE_ID=/subscriptions/YOUR_SUB/resourceGroups/YOUR_RG/providers/Microsoft.Compute/images/worker-image
AZURE_VM_SIZE=Standard_D2s_v3
AZURE_SUBNET_ID=/subscriptions/YOUR_SUB/resourceGroups/YOUR_RG/providers/Microsoft.Network/virtualNetworks/YOUR_VNET/subnets/YOUR_SUBNET
AZURE_VM_ADMIN_USERNAME=azureuser
AZURE_VM_SSH_PUBLIC_KEY="ssh-rsa YOUR_PUBLIC_KEY"

# Azure Web PubSub (Worker通信用)
WEB_PUBSUB_CONNECTION_STRING=Endpoint=https://YOUR_PUBSUB.webpubsub.azure.com;AccessKey=YOUR_KEY;Version=1.0;
WEB_PUBSUB_HUB=worker-events

# オプション: カスタム設定
# WORKER_RUNTIME=azure-vm
# TOKEN_USAGE_CONTAINER=token-usage
